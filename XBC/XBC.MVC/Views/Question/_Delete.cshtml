@model XBC.ViewModel.QuestionViewModel

<div class="col-lg-12"><center><h3>Are you sure you want to delete this data ?</h3></center></div>

<div>
    @using (Html.BeginForm("Delete", "Question", FormMethod.Post, new { id = "form-delete", name = "form-delete" })) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)

        <div class="form-actions no-color row">
            <div class="col-lg-3"></div>
            <div class="col-lg-3"><center><input type="button" value="No" class="btn btn-danger" data-dismiss="modal" /></center></div>
            <div class="col-lg-3"><center><input type="submit" value="Yes" class="btn btn-success" /></center></div>
            <div class="col-lg-3"></div>
        </div>
    }
</div>

<script type="text/javascript">
    $("#form-delete").submit(function () {
        $.ajax({
            url: this.action,
            type: this.method,
            data: $(this).serialize(),
            success: function (result) {
                if (result.success) {
                    alert("Delete successful\nName: " + result.entity.name);
                    $(".modal").modal("hide");
                    GetList();
                }
                else {
                    alert("Error\nName: " + result.message);
                }
            }
        })
        return false;
    });
</script> 
