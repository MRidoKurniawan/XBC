@model XBC.ViewModel.TestimonyViewModel

@using (Html.BeginForm("Edit", "Testimony", FormMethod.Post, new { id = "form-edit", name = "form-edit" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <table class="table" style="width:100%">
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-12">
                            <textarea class="form-control" name="title" style="max-width:100%; height:5rem; resize:none;" placeholder="Title">@Model.title</textarea>
                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-12">
                            <textarea class="form-control" name="content" style="max-width:100%; height:25rem; resize:none;" placeholder="Content">@Model.content</textarea>
                            @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12">
                            <input type="button" value="Cancel" class="btn btn-primary" data-dismiss="modal" style="background-color:darkorange" />
                            <input type="submit" value="Save" class="btn btn-primary" style="background-color:darkorange" />
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
}
@Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
    $("#form-edit").submit(function () {
        $.ajax({
            url: this.action,
            type: this.method,
            data: $(this).serialize(),
            success: function (result) {
                if (result.success) {
                    alert("Save Successfull!\nTitle: " + result.entity.title + "\nContent: " +
                    result.entity.content);
                    $(".modal").modal("hide");
                    GetList();
                } else {
                    alert("Error!\n" + result.message);
                }
            }
        });
        return false;
    });
</script>