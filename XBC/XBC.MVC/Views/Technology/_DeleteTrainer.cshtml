@model XBC.ViewModel.TechnologyTrainerViewModel
@{
    ViewBag.id = Session["id"];
}

<h3>Are you sure to delete this data?</h3>
<div>
    @using (Html.BeginForm("DeleteTrainer", "Technology", FormMethod.Post, new { id = "form-delete", name = "form-delete" })) {

        @Html.AntiForgeryToken()
        @Html.HiddenFor(Model => Model.id)
        @Html.HiddenFor(Model => Model.trainer_name)

        <input type="hidden" id="UserId" name="UserId" value="@ViewBag.id" />
        <div class="form-actions no-color">
            <input type="button" value="No" class="btn btn-danger" data-dismiss="modal" />
            <input type="submit" value="Yes" class="btn btn-success" />
        </div>
    }
</div>
<script type="text/javascript">
    $("#form-delete").submit(function () {
        $.ajax({
            url: this.action,
            type: this.method,
            data: $(this).serialize(),
            success: function (result) {
                if (result.success) {
                    alert("Delete Successfull");
                    $(".modal2").hide();
                    getlisttrainer();
                } else {
                    alert("Error!\n" + result.message);
                }
            }
        });
        return false;
    });
</script>