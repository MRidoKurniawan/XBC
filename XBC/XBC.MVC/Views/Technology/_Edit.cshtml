@model XBC.ViewModel.TechnologyViewModel

@using (Html.BeginForm("Edit", "Technology", FormMethod.Post, new { id = "form-edit", name = "form-edit" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <table class="table" style="width:100%">
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-12">
                            <textarea class="form-control" name="name" style="max-width:100%; height:5rem; resize:none;" placeholder="Name" id="name">@Model.name </textarea>
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-12">
                            <textarea class="form-control" name="notes" style="max-width:100%; height:15rem; resize:none;" placeholder="Notes" id="notes">@Model.notes</textarea>
                            @Html.ValidationMessageFor(model => model.notes, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="col-lg-12">
                    </div>
                </td>
            </tr>
            <tr>
                <th>
                    <div class="col-lg-12">
                        <input id="btn-addtrainer" type="button" value="+Trainer" class="btn btn-primary" style="float:right; background-color:darkorange" />
                    </div>
                    <div id="trainer-list" class="panel-body">
                        <h4>Loading...</h4>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Cancel" class="btn btn-primary" data-dismiss="modal" style="background-color:darkorange" />
                            <input type="submit" value="Save" class="btn btn-primary" style="background-color:darkorange" />
                        </div>
                    </div>
                </th>
            </tr>
        </table>
    </div>
}
@Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
    function getlisttrainer() {
        $.ajax({
            url: '@Url.Action("ListEditTrainer", "Technology")',
            type: 'get',
            data: {id: $("#id").val()},
            success: function (result) {
                $("#trainer-list").html(result);
            }
        });
    }
    $(document).ready(function () {
        getlisttrainer();
    });
    $("#form-edit").submit(function () {
        var details = [];
        var dataform = $(this).serialize();
        $("#trainer-list").find("tbody").find(".baru").each(function (item) {
            var detail = {
                id: $(this).find("input[name=id]").val()
            };
            details.push(detail);
        });

        data = { id: $("#id").val(), name: $("#name").val(), notes: $("#notes").val(), Details: details };
        $.ajax({
            url: this.action,
            type: this.method,
            data: { model: data },
            success: function (result) {
                if (result.success) {
                    alert("Save Successfull!");
                    $(".modal").modal("hide");
                    GetList();
                } else {
                    alert("Error!\n" + result.message);
                }
            }
        });
        return false;
    });
</script>
<script>
    $("#btn-addtrainer").click(function () {
        $.ajax({
            url: '@Url.Action("Addtrainer", "Technology")',
            type: 'get',
            success: function (result) {

                $(".body2").html(result);
                $(".modal2").show();
            }
        });
    });

</script>