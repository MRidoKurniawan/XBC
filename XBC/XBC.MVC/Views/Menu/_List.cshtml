@model IEnumerable<XBC.ViewModel.MenuViewModel>

<div>
    <div class="col-md-7" style="padding:5rem 0rem 5rem 0rem; display:inline">
        <input type="text" id="tcari" placeholder="Search by username/email" class="form-control-static col-md-9" style="padding : 7px;" />
        <button type="button" class="form-control-static" id="btn-cari" style="padding : 7px;">
            <span class="glyphicon glyphicon-search"></span>
        </button>
    </div>
    <div class="col-md-3" style="padding:5rem 0rem 5rem 0rem; display:inline; float :right;">
        <button type="button" class="form-control-static" id="btn-create-new" style="padding : 7px; float :right;">
            <span class="glyphicon glyphicon-plus"></span>
        </button>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.menu_parent)
        </th>
        <th>#</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menu_parent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
