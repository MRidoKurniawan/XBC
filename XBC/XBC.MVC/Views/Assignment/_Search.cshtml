@model IEnumerable<XBC.ViewModel.AssignmentViewModel>
<div>
    <div class="col-md-4" style="padding:5rem 0rem 5rem 0rem; display:inline">
        <input type="date" id="tcari" placeholder="Search by title" class="form-control" style="padding : 7px; display:inline; width:50%;" value="@ViewBag.tanggalharini" />
        <button type="button" class="btn btn-primary" id="btn-cari" style="padding : 7px 15px 7px 15px; display:inline;">
            <span class="glyphicon glyphicon-search"></span>
        </button>
    </div>
    <div class="col-md-3" style="padding:5rem 0rem 5rem 0rem; display:inline; float :right;">
        <button type="button" class="btn btn-primary" id="btn-create-new" style="padding : 7px 15px 7px 15px; float :right;">
            <span class="glyphicon glyphicon-plus"></span>
        </button>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.start_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end_date)
        </th>
        <th>#</th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.is_done != null)
        {
            <tr style="background-color:#d9edf7;">
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TanggalMulai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TanggalSelesai)
                </td>
                <td>
                    <span class="glyphicon glyphicon-ok"></span>
                </td>
            </tr>
        }
        else
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TanggalMulai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TanggalSelesai)
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-align-justify"></span>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item btn-edit" href="#" data-id="@item.id"><div class="col-lg-12">Edit</div></a>
                            <a class="dropdown-item btn-delete" href="#" data-id="@item.id"><div class="col-lg-12">Delete</div></a>
                            <a class="dropdown-item btn-hold" href="#" data-id="@item.id"><div class="col-lg-12">Hold</div></a>
                            <a class="dropdown-item btn-done" href="#" data-id="@item.id"><div class="col-lg-12">Mark As Done</div></a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    }

</table>

<script type="text/javascript">
    $(".btn-edit").click(function () {
        $.ajax({
            url: '@Url.Action("Edit","Menu")',
            type: 'get',
            data: { id: $(this).attr("data-id") },
            success: function (result) {
                $(".modal-body").html(result);
                $(".modal-title").html("<h4>Edit Data</h4>");
                $(".modal").modal("show");
            }
        });
    });
    $(".btn-delete").click(function () {
        $.ajax({
            url: '@Url.Action("Delete","Menu")',
            type: 'get',
            data: { id: $(this).attr("data-id") },
            success: function (result) {
                $(".modal-body").html(result);
                $(".modal-title").html("<h4>Delete Data</h4>");
                $(".modal").modal("show");
            }
        });
    });

    $("#btn-create-new").click(function () {
        $.ajax({
            url: '@Url.Action("Create","Assignment")',
            type: 'get',
            success: function (result) {
                $(".modal-body").html(result);
                $(".modal-title").html("Create New");
                $(".modal").modal("show");

            }
        })
    })
    $("#btn-cari").click(function () {
        var cari
        $.ajax({
            url: '@Url.Action("search","Assignment")',
            type: 'get',
            data: { search: $("#tcari").val() },
            success: function (result) {
                $("#data-list").html(result);
            }
        })
    });
</script>