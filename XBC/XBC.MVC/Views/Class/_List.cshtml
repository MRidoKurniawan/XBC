@model IEnumerable<XBC.ViewModel.ClazzViewModel>

<div class="col-lg-5">
    <input type="text" id="txt-search" class="form-control" placeholder="search..." />

</div>
<div class="col-lg-3">
    <button type="button" id="btn-search" class="btn btn-success">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
    </button>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Batch")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.batchId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.biodataId)
        </td>
        <td>
            <div class="dropdown">
                <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item btn-delete" href="#" data-id="@item.id"><div class="col-lg-12">Delete</div></a>
                </div>
            </div>
        </td>
    </tr>
}

</table>
<script type="text/javascript">

    $("#btn-search").click(function () {
        $.ajax({
            url: '@Url.Action("List", "Class")',
            type: 'get',
            data: { search: $("#txt-search").val() },
            success: function (result) {
                //console.log("1");
                $("#data-list").html(result);
            }
        });
    });
</script>